<Window x:Class="WpfAppTest.PropertyTest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:GeneralTool.General.WPFHelper.WPFControls;assembly=GeneralTool.General"
        xmlns:vm="clr-namespace:WpfAppTest.VIewModels"
        xmlns:local="clr-namespace:WpfAppTest"
        mc:Ignorable="d"
        Title="PropertyTest" Height="450" Width="800">
    <Window.DataContext>
        <ObjectDataProvider ObjectType="{x:Type vm:PropertyViewModel}" />
    </Window.DataContext>
    <Grid>
        <ItemsControl ItemsSource="{Binding TaskItems}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <wpf:PropertyGridControl SelectedObject="{Binding}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
