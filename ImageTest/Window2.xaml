<Window x:Class="ImageTest.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageTest"
        mc:Ignorable="d"
        Title="Window2" Height="550" Width="800">
    <Grid x:Name="g2">
        <Grid Width="400" Height="400" Background="AliceBlue" x:Name="grid">
            <Border Background="Red"
                    x:Name="bor"
                    Width="50"
                    Height="50"
                    MouseDown="Border_MouseDown"></Border>
        </Grid>
       

        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Realse"
                          Click="MenuItem_Click" />
                <MenuItem Header="Again"
                          Click="MenuItem_Click_1" />
            </ContextMenu>
        </Grid.ContextMenu>
    </Grid>
</Window>
