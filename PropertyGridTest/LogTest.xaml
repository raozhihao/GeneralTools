<Window x:Class="PropertyGridTest.LogTest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:g="clr-namespace:GeneralTool.General.WPFHelper.WPFControls;assembly=GeneralTool.General"
        xmlns:local="clr-namespace:PropertyGridTest"
        mc:Ignorable="d"
        Title="LogTest" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem Header="Add"
                      Click="AddMethod" />
            <MenuItem Header="Remove"
                      Click="RemoveMethod" />
            <MenuItem Header="AddRange"
                      Click="AddRangeMethod" />
            <MenuItem Header="RemoveRange"
                      Click="RemoveRangeMethod" />
            <MenuItem Header="TaskAdd"
                      Click="MenuItem_Click" />
        </Menu>

        <RichTextBox Grid.Row="1">
            <FlowDocument>
                <g:LogParargraph Lines="{Binding Logs}"
                                 MaxLineCount="100"
                                 InfoVisible="True"/>
            </FlowDocument>
        </RichTextBox>
    </Grid>
</Window>
